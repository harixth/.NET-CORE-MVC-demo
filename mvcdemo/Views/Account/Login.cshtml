@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<h2></h2>
<div class="row" style="padding-top:50px;">
    <div class="col-md-8">
            <img src="~/images/login-image.jpeg" style="width:100%;height:390px;" />
    </div>
    <div class="col-md-4" style="border-style: solid;font-family: 'Lato', sans-serif;">     
        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <h3 id="login-title">Welcome Back!</h3>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <i class="fa fa-envelope" aria-hidden="true"></i>
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <i class="fa fa-key" aria-hidden="true"></i>
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-login">Log in</button>
                </div>
                <div class="form-group">
                    <p style="text-align:center">
                        <a asp-action="ForgotPassword">Forgot your password?</a>
                    </p>
                    <p style="text-align:center">
                        <span>Not a member yet?&nbsp;</span><a asp-action="Register">Register</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
